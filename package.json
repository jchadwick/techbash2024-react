{
  "scripts": {
    "build": "run-p slides:render",
    "clean": "rimraf .parcel-cache dist",
    "demo": "run-p -l demo:*",
    "demo:app": "live-server --port=3001 --open=/ ./demo",
    "demo:server": "json-server db.json",
    "demo-app:init": "mkdir -p react-app && rm -rf react-app/* && cp demo/site.css demo/users-api.js react-app && cp converted/index.html.txt react-app/index.html",
    "start": "run-p slides:serve slides:open demo-app:init",
    "slides:serve": "parcel serve --watch-dir ./ index.html",
    "slides:open": "open http://localhost:1234",
    "slides:render": "parcel build --public-url=./ index.html"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "json-server": "^1.0.0-beta.2",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "reveal.js": "^5.1.0",
    "rimraf": "^6.0.1"
  }
}
